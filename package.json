{
  "name": "lyk",
  "productName": "lyk",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "babel-loader": "^8.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.0",
    "css-loader": "^5.0.1",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "electron-builder-squirrel-windows": "^22.9.1",
    "eslint": "^7.13.0",
    "eslint-loader": "^4.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.1",
    "nodemon": "^2.0.4",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "stylelint-webpack-plugin": "^2.1.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.9.5",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "version": "v0.1.0",
  "main": "main.js",
  "scripts": {
    "build": "webpack --mode=production",
    "watch": "webpack --watch",
    "server": "webpack-dev-server --hot",
    "start": "nodemon --watch main.js renderer.js --exec 'electron .'",
    "nodemon-h": "nodemon -h",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win64": "electron-builder --windows --x64"
  },
  "build": {
    "appId": "lyk",
    "copyright": "Â©2020 Yongkang lu, Inc.",
    "files": [
      "./dist/**/*",
      "./index.html"
    ],
    "directories": {
      "output": "dist/electron"
    },
    "mac": {
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "yongkang lu, Inc."
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^0.21.0",
    "vue": "^2.6.12",
    "vue-router": "^3.4.9",
    "vuex": "^3.5.1"
  }
}
